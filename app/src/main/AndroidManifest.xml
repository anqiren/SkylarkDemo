<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="online.himakeit.skylarkdemo">

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/skylark"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/skylark"
        android:supportsRtl="true"
        android:theme="@style/NoActionBarAppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:windowSoftInputMode="stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <provider
            android:name=".contentproviderdemo.DBSQLProvider"
            android:authorities="online.himakeit.skylarkdemo.provider"
            android:exported="true" />

        <activity android:name=".immersion_status_bar.ImmersionNormalActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"
            android:theme="@style/NoActionBarAppTheme"/>
        <activity android:name=".immersion_status_bar.ImmersionPicActivity"
            android:theme="@style/NoActionBarAppTheme"/>
        <activity android:name=".immersion_status_bar.ImmersionNavActivity"
            android:theme="@style/NoActionBarAppTheme"/>
        <activity android:name=".immersion_status_bar.ImmersionActionBarActivity"
            android:theme="@style/AppTheme"/>
    </application>

</manifest>